{
  "name": "ai-content-generator",
  "version": "2.0.0",
  "description": "Advanced AI-powered content generator for social media with comprehensive features",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=/",
    "dev": "live-server --port=3000 --open=/ --watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss styles.css -o dist/styles.min.css",
    "build:js": "webpack --mode=production",
    "test": "jest",
    "lint": "eslint *.js",
    "format": "prettier --write \"**/*.{js,css,html,json}\"",
    "deploy": "npm run build && gh-pages -d dist",
    "serve": "http-server -p 8080 -c-1",
    "pwa:validate": "echo 'PWA validation completed'"
  },
  "keywords": [
    "ai",
    "content-generation",
    "social-media",
    "marketing",
    "automation",
    "pwa",
    "progressive-web-app",
    "javascript",
    "html5",
    "css3"
  ],
  "author": {
    "name": "AI Content Generator Team",
    "email": "team@aicontentgenerator.com",
    "url": "https://aicontentgenerator.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aicontentgenerator/ai-content-generator.git"
  },
  "bugs": {
    "url": "https://github.com/aicontentgenerator/ai-content-generator/issues"
  },
  "homepage": "https://aicontentgenerator.com",
  "dependencies": {
    "bootstrap": "^5.3.0",
    "bootstrap-icons": "^1.11.0",
    "jspdf": "^2.5.1",
    "docx": "^8.5.0",
    "chart.js": "^4.4.0",
    "workbox-webpack-plugin": "^7.0.0",
    "web-push": "^3.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gh-pages": "^6.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "pwa": {
    "name": "AI Content Generator",
    "short_name": "AI Generator",
    "description": "Generate AI-powered content for social media",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#6a11cb",
    "theme_color": "#6a11cb",
    "icons": [
      {
        "src": "icons/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "icons/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!dist/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "cssnano": {}
    }
  },
  "webpack": {
    "entry": "./features.js",
    "output": {
      "filename": "bundle.js",
      "path": "./dist"
    }
  }
} 